<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import pl.jowko.jrank.feature.customfx.StringTextField?>
<DialogPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.jowko.jrank.desktop.feature.learningtable.dialogs.ColumnDialogController">
   <content>
      <VBox>
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="150.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="30.0" minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="30.0" minHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="70.0" minHeight="70.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
					 <Label fx:id="nameLabel" text="Name:" />
					 <StringTextField fx:id="nameField" GridPane.columnIndex="1" />
					 <Label fx:id="typeLabel" text="Field type:" GridPane.rowIndex="1" />
					 <ComboBox fx:id="typeField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
					 <Label fx:id="kindLabel" text="Kind:" GridPane.rowIndex="2" />
					 <ComboBox fx:id="kindField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
					 <Label fx:id="preferenceLabel" text="Preference type:" GridPane.rowIndex="3" />
					 <ComboBox fx:id="preferenceField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin></ComboBox>
      			 <Label fx:id="enumsLabel" text="Enum values:" GridPane.rowIndex="4">
                     <GridPane.margin>
                        <Insets top="5.0" />
                     </GridPane.margin>
                  </Label>
      			 <TextArea fx:id="enumsField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="4">
                     <GridPane.margin>
                        <Insets top="5.0" />
                     </GridPane.margin>
                  </TextArea>
               </children>
               <opaqueInsets>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </GridPane>
            <FlowPane hgap="20.0" vgap="10.0">
               <children>
      			 <Button fx:id="saveButton" minHeight="30.0" minWidth="80.0" onAction="#addNewColumnAction" text="Save" />
                  <Button fx:id="cancelButton" minHeight="30.0" minWidth="80.0" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
      			 <Button fx:id="clearFormButton" minHeight="30.0" minWidth="80.0" mnemonicParsing="false" text="Clear form">
			 </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </FlowPane>
         </children>
      </VBox>
   </content>
</DialogPane>
